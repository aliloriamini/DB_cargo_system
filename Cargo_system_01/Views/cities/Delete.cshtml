@model Cargo_system_01.Models.city

@{
    ViewBag.Title = "شهرها";
    Layout = "~/Views/_AdminLayout.cshtml";
}

<br />
<br />
<br />


<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4" style="margin-top:30px">
