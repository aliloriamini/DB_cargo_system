        <h2>جزئیات شهرها</h2>
        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    نام
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.name)
                </dd>

            </dl>
        </div>

        @using (Html.BeginForm())
