            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="حذف" class="btn btn-danger" /> 
                @Html.ActionLink("بازگشت", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        }
    </div>
