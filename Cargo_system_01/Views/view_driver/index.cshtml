@model IEnumerable<Cargo_system_01.Models.View_driver>

@{
    ViewBag.Title = "رانندگان ماشين";
    Layout = "~/Views/_AdminLayout.cshtml";
}
<div class="card-body">
    <h2>رانندگان ماشين</h2>
    <div class="card-body" style="overflow: auto;white-space: nowrap;">
        <table id="grid" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        نام راننده
                    </th>
                    <th>
                        نام خانوادگی
                    </th>
                    <th>
                        مدل ماشین
                    </th>
                    <th>
                        ویژگی بخش بار
                    </th>
                    <th>
                        شماره تماس
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.family)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.cartype_name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.carproperty_name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.mobile)
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>