@model Cargo_system_01.Models.bill

@{
    ViewBag.Title = "صورت حساب ها";
    Layout = "~/Views/_AdminLayout.cshtml";
}

<br />
<br />
<br />


<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4" style="margin-top:30px">
        <h3>آیا شما از حذف کردن این آیتم مطمئن هستید؟</h3>
        <h2>جزئیات صورتحساب</h2>
        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    هزینه
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.price)
                </dd>

                <dt>
                    مالیات
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.tax)
                </dd>

                <dt>
                    وصولی
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.vosoli)
                </dd>

                <dt>
                    تاریخ بانک
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.date_bank)
                </dd>

                <dt>
                    شماره سفارش
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.order.orders_id)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="حذف" class="btn btn-danger" /> |
                    @Html.ActionLink("بازگشت", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            }
        </div>
    </div>
</div>

    <br />
    <br />
    <br />
