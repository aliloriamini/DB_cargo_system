@model Cargo_system_01.Models.cartype

@{
    ViewBag.Title = "نوع خودرو";
    Layout = "~/Views/_AdminLayout.cshtml";
}

<br />
<br />
<br />

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4" style="margin-top:30px">
        <h2>جزئیات نوع خودرو</h2>
        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    نام
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.name)
                </dd>
                @if (!string.IsNullOrWhiteSpace(Model.image))
                    {
                <dt>
                    تصویر مدل خودرو
                </dt>

                <dd>
                    <img src="@Url.Content(Model.image)" width="250" height="250" multiple />
                </dd>
                    }
            </dl>
        </div>
        <p>
            @Html.ActionLink("ویرایش", "Edit", new { id = Model.cartype_id }, new { @class = "btn btn-info" })
            @Html.ActionLink("بازگشت", "Index", null, new { @class = "btn btn-secondary" })
</p>
</div>
</div>

<br />
<br />
<br />
