@model Cargo_system_01.Models.cartype

@{
    ViewBag.Title = "نوع خودرو";
    Layout = "~/Views/_AdminLayout.cshtml";
}

<br />
<br />
<br />


@using (Html.BeginForm("Edit", "cartypes", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="card card-primary centerbox">
        <div class="card-header">
            <h3 class="card-title">ویرایش نوع خودرو</h3>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.cartype_id)        
        @Html.HiddenFor(model => model.image)

        <div class="form-group">
            <div class="card-body row">
                @Html.LabelFor(model => model.name, "نام:", htmlAttributes: new { @class = "control-label col-md-3" })
                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control  col-md-8" } })
                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="card-body row">
                @Html.LabelFor(model => model.image, "تصویر نوع خودرو:", htmlAttributes: new { @class = "control-label col-md-3" })
                <input type="file" name="ImageFile" id="ImageFile">
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="ثبت" class="btn btn-default" />
                @Html.ActionLink("بازگشت", "Index", null, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>

}

<br />
<br />
<br />
}


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
